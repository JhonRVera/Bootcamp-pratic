<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">bootcamp_mascotas_grid.bootcamp_mascotas_grid_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/nuevamascota"/>
                <class>primary</class>
                <label translate="true">Agregar Mascota</label>
            </button>
        </buttons>
        <spinner>bootcamp_mascotas_columns</spinner>
        <deps>
            <dep>bootcamp_mascotas_grid.bootcamp_mascotas_grid_data_source</dep>
        </deps>
    </settings>
    <dataSource name="bootcamp_mascotas_grid_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">entity_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Bootcamp_Mascotas::mascotas_management</aclResource>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="bootcamp_mascotas_grid_data_source">
            <settings>
                <requestFieldName>entity_id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <columns name="bootcamp_mascotas_columns">
        <column name="nombre" sortOrder="10">
            <settings>
                <filter>text</filter>
                <dataType>text</dataType>
                <label translate="true">Nombre</label>
            </settings>
        </column>
        <column name="especie" sortOrder="13">
            <settings>
                <filter>text</filter>
                <dataType>text</dataType>
                <label translate="true">Especie</label>
            </settings>
        </column>
        <column name="raza" sortOrder="14">
            <settings>
                <filter>text</filter>
                <dataType>text</dataType>
                <label translate="true">Raza </label>
            </settings>
        </column>
        <column name="edad" sortOrder="15">
            <settings>
                <filter>text</filter>
                <dataType>text</dataType>
                <label translate="true">Edad</label>
            </settings>
        </column>
    </columns>
</listing>
