<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="bootcamp_useropinion" resource="default" engine="innodb" comment="User Opinion Table">
        <column xsi:type="int" name="opinion_id" padding="10" unsigned="true" nullable="false" identity="true" comment="User Opinion Id"/>
        <column xsi:type="varchar" name="sku" nullable="false" length="255" comment="User Opinion SKU"/>
        <column xsi:type="varchar" name="nombre" nullable="false" length="255" comment="User nombre"/>
        <column xsi:type="varchar" name="user_email" nullable="false" length="255" comment="User Opinion Email"/>
        <column xsi:type="float" name="puntuacion" nullable="false" comment="User Opinon Puntuacion"/>
        <column xsi:type="varchar" name="opinion" nullable="false" length="255" comment="User Opinion"/>
        <column xsi:type="timestamp" name="fecha" nullable="false" default="CURRENT_TIMESTAMP" comment="User Opinion Fecha"/>
        
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="opinion_id"/>
        </constraint>
    </table>
</schema>